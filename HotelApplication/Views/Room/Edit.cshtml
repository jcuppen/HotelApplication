@model DomainModel.Room

@{
	ViewBag.Title = "Edit";
}
<div class="container-fluid">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Edit room</h3>
		</div>
		<div class="panel-body">

			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true)

				<fieldset>

					@Html.HiddenFor(model => model.RoomID)

					<div class="editor-label">
						<p><b>Minimum price</b></p>
					</div>
					<div class="editor-field">
						@Html.EditorFor(model => model.MinimumPrice)
						@Html.ValidationMessageFor(model => model.MinimumPrice)
					</div>

					<div class="editor-label">
						<p><b>Additional cost</b></p>
					</div>
					<div class="editor-field">
						@Html.EditorFor(model => model.AdditionalCosts)
						@Html.ValidationMessageFor(model => model.AdditionalCosts)
					</div>

					<div class="editor-label">
						<p><b>Room size</b></p>
					</div>
					<div class="editor-field">
						@Html.EditorFor(model => model.RoomSize)
						@Html.ValidationMessageFor(model => model.RoomSize)
					</div>

					<br>
						<input type="submit" value="Save" class="btn btn-success"/>

						@Html.ActionLink("Cancel", "Index", null, new
{
	@class = "btn btn-warning"

})
				</fieldset>
			}

			@section Scripts {
				@Scripts.Render("~/bundles/jqueryval")
			}
		</div>
	</div>
</div>