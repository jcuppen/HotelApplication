@model DomainModel.Room

@{
	ViewBag.Title = "Delete";
}
<div class="container-fluid">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Delete room</h3>
		</div>
		<div class="panel-body">

			<h3>Are you sure you want to delete this room?</h3>
			<fieldset>

				<div class="display-label">
					<p><b>Minimum price</b></p>
				</div>
				<div class="display-field">
					@Html.DisplayFor(model => model.MinimumPrice)
				</div>

				<div class="display-label">
					<p><b>Additional cost</b></p>
				</div>
				<div class="display-field">
					@Html.DisplayFor(model => model.AdditionalCosts)
				</div>

				<div class="display-label">
					<p><b>Room size</b></p>
				</div>
				<div class="display-field">
					@Html.DisplayFor(model => model.RoomSize)
				</div>
			</fieldset>
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				<br>
					<input type="submit" value="Delete" class="btn btn-danger" />
				
					@Html.ActionLink("Cancel", "Index", null, new
{
	@class = "btn btn-warning"
})
			}
		</div>
	</div>
</div>