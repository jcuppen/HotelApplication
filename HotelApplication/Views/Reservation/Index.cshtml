@model IEnumerable<DomainModel.Reservation>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="post" action="reservation">

	<fieldset>
		<legend>Filter</legend>

		<div class="editor-label">
			<b>Test</b>
		</div>
		<div class="editor-field">
			<input type="datetime" name="start" value="@DateTime.Now">
			<input type="datetime" name="end" value="@DateTime.Now.AddDays(1)">
		</div>


		<p>
			<input type="submit" value="Filter" />
		</p>
	</fieldset>
</form>

<table>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ZipCode)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.City)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Street)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Number)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.EmailAddress)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TotalPrice)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.BankAccountNumber)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DayOfArrival)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DayOfDeparture)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceZipCode)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceCity)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceStreet)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceNumber)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.ZipCode)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.City)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Street)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Number)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.EmailAddress)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TotalPrice)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.BankAccountNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DayOfArrival)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DayOfDeparture)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceZipCode)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceCity)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceStreet)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceNumber)
			</td>
		</tr>
	}
</table>

@Html.ActionLink("Back", "Index", "Home")
