@model IEnumerable<DomainModel.Reservation>

@{
	ViewBag.Title = "Index";
}
<div class="container-fluid">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Reservations</h3>
		</div>
		<div class="panel-body">

			<form method="post" action="reservation">

				<fieldset>

					<div class="editor-label">
						<b>Start date</b>
					</div>
					<div class="editor-field">
						<input type="datetime" name="start" value="@DateTime.Now">
					</div>
					<div class="editor-label">
						<b>End date</b>
					</div>
					<div class="editor-field">
						<input type="datetime" name="end" value="@DateTime.Now.AddDays(1)">
					</div>



					<p>
						<br />
						<input type="submit" value="Filter" class="btn btn-primary"/>
					</p>
				</fieldset>
			</form>

			<table class="table table-striped">
				<tr>
					<th>
						Email address
					</th>
					<th>
						Total price
					</th>
					<th>
						Day of arrival
					</th>
					<th>
						Day of departure
					</th>
					<th>
						Zipcode
					</th>
					<th>
						City
					</th>
					<th>
						Street
					</th>
					<th>
						House number
					</th>
					<th></th>
				</tr>

				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.EmailAddress)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.TotalPrice)
						</td>
						
						<td>
							@Html.DisplayFor(modelItem => item.DayOfArrival)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.DayOfDeparture)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.InvoiceZipCode)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.InvoiceCity)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.InvoiceStreet)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.InvoiceNumber)
						</td>
						<td>
							@Html.ActionLink("Details", "Details", new
	   {
		   id = item.ReservationID
	   }, new
	   {
		   @class = "btn btn-primary"
	   })
						</td>
					</tr>
				}
					
			</table>

			@Html.ActionLink("Back", "Index", "Home", null, new
{ @class="btn btn-default"
})
		</div>
	</div>
</div>